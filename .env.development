# Development Environment Configuration (Docker Compose)
# Copy to .env for local development

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=truelift
POSTGRES_USER=truelift_user
POSTGRES_PASSWORD=truelift_pass
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Gemini API (Add your key)
GEMINI_API_KEY=your-gemini-api-key-here

# Simulation Controls
SIMULATION_ENABLED=true
EVENT_RATE_PER_MINUTE=15  # Events per promotion per minute

# Demo Mode
DEMO_MODE=true
