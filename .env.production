# Production Environment Configuration (GCP Cloud Run)
# Set these as environment variables in Cloud Run services or Secret Manager

# Confluent Cloud Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=pkc-xxxxx.us-central1.gcp.confluent.cloud:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=your-kafka-api-key
KAFKA_SASL_PASSWORD=your-kafka-api-secret

# Cloud SQL Configuration (via Cloud SQL Proxy)
POSTGRES_HOST=/cloudsql/project-id:us-central1:truelift-db
POSTGRES_DB=truelift
POSTGRES_USER=truelift_user
POSTGRES_PASSWORD=<store-in-secret-manager>
POSTGRES_PORT=5432

# Cloud Memorystore Redis Configuration
REDIS_HOST=10.x.x.x  # Internal IP from Memorystore
REDIS_PORT=6379

# API Configuration
API_URL=https://backend-api-xxxxx.us-central1.run.app
NEXT_PUBLIC_API_URL=https://backend-api-xxxxx.us-central1.run.app

# Gemini API (Store in Secret Manager)
GEMINI_API_KEY=<store-in-secret-manager>

# Simulation Controls (for cost optimization)
SIMULATION_ENABLED=true  # Set to false to pause event generation
EVENT_RATE_PER_MINUTE=10  # Lower in prod to reduce Kafka costs

# Demo Mode
DEMO_MODE=false  # Disable demo bursts in production

# Cloud Run Specific
PORT=8080
ENVIRONMENT=production
