# Production Environment Configuration
# Copy this file and replace placeholder values with your actual credentials

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# PostgreSQL Database Configuration (Cloud SQL)
POSTGRES_HOST=your_cloud_sql_ip_here
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_PORT=5432

# Redis Configuration (Memorystore)
REDIS_HOST=your_redis_internal_ip_here
REDIS_PORT=6379

# Kafka Configuration (Confluent Cloud)
KAFKA_BOOTSTRAP_SERVERS=your_confluent_bootstrap_server:9092
KAFKA_SASL_USERNAME=your_kafka_api_key_here
KAFKA_SASL_PASSWORD=your_kafka_api_secret_here
KAFKA_SECURITY_PROTOCOL=SASL_SSL

# API URL (set after backend deployment)
NEXT_PUBLIC_API_URL=https://your-backend-url.run.app
